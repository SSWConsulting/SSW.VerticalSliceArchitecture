{
  "$schema": "http://json.schemastore.org/template",
  "author": "SSW Consulting",
  "classifications": [
    ".NET",
    "Vertical Slice Architecture",
    "API",
    "ASP.NET Core",
    "EF Core"
  ],
  "name": "Vertical Slice",
  "description":  "Create a new full vertical slice",
  "identity": "SSW.VerticalSliceArchitecture.Slice.CSharp",
  "groupIdentity": "SSW.VerticalSliceArchitecture.Slice",
  "shortName": "ssw-vsa-slice",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "preferNameDirectory": false,
  "symbols": {
    "defaultNamespace": {
      "type": "bind",
      "binding": "msbuild:RootNamespace",
      "replaces": "SSW.VerticalSliceArchitecture",
      "defaultValue": "SSW.VerticalSliceArchitecture",
      "description": "Replaces the default namespace in code files with the projectâ€™s root namespace."
    },
    "featureName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Hero",
      "fileRename": "Hero",
      "description": "The name of a single entity (e.g. Hero)."
    },
    "featureNamePlural": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Heroes",
      "fileRename": "Heroes",
      "description": "The name of the feature (e.g. Heroes)."
    },
    "featureNameCamel": {
      "type": "derived",
      "valueSource": "featureName",
      "valueTransform": "firstLowerCaseInvariant",
      "replaces": "hero",
      "fileRename": "hero"
    },
    "featureNamePluralCamel": {
      "type": "derived",
      "valueSource": "featureNamePlural",
      "valueTransform": "firstLowerCaseInvariant",
      "replaces": "heroes",
      "fileRename": "heroes"
    },
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": "**/Heroes/**"
    }
  ]
}